<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/widget_recipe_holder_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/widget_food_image_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8cutlery"/>
        <TextView
            android:id="@+id/widget_recipe_holder_text_view_1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/widget_recipe_holder_2"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/border"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/widget_food_image_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8cutlery"/>
        <TextView
            android:id="@+id/widget_recipe_holder_text_view_2"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/widget_recipe_holder_3"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/border"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/widget_food_image_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8cutlery"/>
        <TextView
            android:id="@+id/widget_recipe_holder_text_view_3"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/widget_recipe_holder_4"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/border"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/widget_food_image_view_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8cutlery"/>
        <TextView
            android:id="@+id/widget_recipe_holder_text_view_4"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"/>
    </LinearLayout>
</LinearLayout>